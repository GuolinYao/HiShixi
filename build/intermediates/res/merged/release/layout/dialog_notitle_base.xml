<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_frame_bg"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/tv_confirm_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        style="@style/list_marginLeftAndRight_style"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="#999999"
        android:lineSpacingExtra="3dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="@color/nomal_btn_color"
            android:text="@string/cancel_str" 
           />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/tv_confrim_btn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="16sp"
             android:textColor="@color/nomal_btn_color"
            android:text="@string/confirm_str" />
    </LinearLayout>

</LinearLayout>