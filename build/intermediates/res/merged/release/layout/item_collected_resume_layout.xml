<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_frame_bg" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f2f1f6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1b1b1b"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:textColor="#a5a5a5"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="8dp"
            android:textColor="#a5a5a5"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tv_school"
            android:textColor="#a5a5a5"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_enterprise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_school"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:textColor="#ff9600"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_school"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tv_enterprise"
            android:ellipsize="end"
            android:maxEms="9"
            android:singleLine="true"
            android:textColor="#ff9600"
            android:textSize="14sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_position"
            android:layout_marginTop="11dp"
            android:background="@drawable/dashed_line" />

        <TextView
            android:id="@+id/tv_drop_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginTop="8dp"
            android:textColor="#a5a5a5"
            android:textSize="11sp" />
    </RelativeLayout>

</RelativeLayout>