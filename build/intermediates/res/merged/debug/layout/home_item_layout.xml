<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg">
    <!-- 标题 -->
	<RelativeLayout android:id="@+id/home_item_title"
	    android:layout_width="match_parent"
	    android:layout_height="29dp"
	    android:background="@drawable/edit_frame_bg"
	    android:gravity="center_vertical">
	    <ImageView android:id="@+id/image_titleincon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:contentDescription="@string/app_name"
	        style="@style/list_marginLeft_style"
	        android:src="@drawable/remenqiye"/>
	    <TextView android:id="@+id/text_titlename"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/image_titleincon"
	        android:layout_toEndOf="@id/image_titleincon"
	        android:layout_marginLeft="5dp"
	        android:layout_marginStart="5dp"
	        android:textColor="@color/main_font_color"
	        android:textSize="13sp"
	        android:text="热门企业"
	        />
	</RelativeLayout>
	<!-- 热门企业item -->
	<RelativeLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/home_item_title"
	    android:padding="1px">
	    <ImageView android:id="@+id/image_hotcommpany"
	        android:layout_width="55dp"
	        android:layout_height="55dp" 
	        android:scaleType="centerCrop"
	         style="@style/list_marginLeft_style"
	         android:layout_marginTop="15dp"
	         android:contentDescription="@string/app_name"
	        android:background="@drawable/image_bg"
	         android:padding="1px"/>
	    <LinearLayout android:id="@+id/layout_content"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	         android:layout_toRightOf="@id/image_hotcommpany"
	         android:layout_toEndOf="@id/image_hotcommpany" 
	         android:orientation="vertical"
	         android:layout_marginTop="14dp"
	         android:layout_marginLeft="10dp"
	        android:layout_marginStart="10dp"
	        android:layout_marginRight="15dp"
	        android:layout_marginEnd="15dp">
	    <TextView android:id="@+id/text_commpany_name"
	        android:layout_width="fill_parent"
	        android:layout_height="25dp"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:gravity="center_vertical"
	        android:textColor="@color/title_bar_font_other_color"
	        android:textSize="14sp"
	       />
	    <TextView android:id="@+id/text_commpany_desc"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:minHeight="25dp"
	        android:gravity="center_vertical"
	        android:textColor="#999999"
	        android:textSize="12sp"
	      />
	    </LinearLayout>
	    <View android:layout_width="fill_parent"
	        android:layout_height="1px"
	         android:layout_toRightOf="@id/image_hotcommpany"
	         android:layout_toEndOf="@id/image_hotcommpany" 
	         android:background="@color/divider_color"
	         android:layout_marginLeft="10dp"
	        android:layout_marginStart="10dp"
	        android:layout_marginRight="15dp"
	        android:layout_alignBottom="@id/image_hotcommpany"
	        android:layout_marginEnd="15dp"
	        />
	</RelativeLayout>
</RelativeLayout>
