<?xml version="1.0" encoding="utf-8"?>
<!-- 首页我的登陆情况下没有数据的头部 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#00a1e1" 
    android:orientation="vertical"
    android:id="@+id/rl_mine_nonedata_toplayout" >

        <ImageView
            android:id="@+id/iv_mine_notlogin_image"
            android:layout_width="79dp"
            android:layout_height="79dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/morenidtouxiang"
            android:scaleType="centerCrop" />

        <TextView
                android:id="@+id/tv_mine_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_bg"
                android:text="@string/mine_login_or_register_str"
                 android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_mine_notlogin_image"
            android:layout_toRightOf="@id/iv_mine_notlogin_image"
                android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:contentDescription="@string/app_name"
            android:onClick="onClick"
            android:padding="10dp"
            android:src="@drawable/more_info" />

</RelativeLayout>
