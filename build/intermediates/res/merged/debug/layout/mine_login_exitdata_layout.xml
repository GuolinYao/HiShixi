<?xml version="1.0" encoding="utf-8"?>
<!-- 首页我的登陆情况下有数据的头部 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/rl_mine_exitdata_toplayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#00a1e1" >

        <ImageView
            android:id="@+id/iv_tab_mine_image"
            android:layout_width="79dp"
            android:layout_height="79dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/morenidtouxiang"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/iv_tab_mine_image"
            android:layout_toRightOf="@id/iv_tab_mine_image"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_mine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="10dp"
                android:textColor="@color/main_bg"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_mine_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:textColor="@color/main_bg"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_mine_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_bg"
                    android:textSize="14sp" 
                   />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="@color/main_bg" />

                <TextView
                    android:id="@+id/tv_mine_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_bg"
                    android:singleLine="true"
                    android:ellipsize="none"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_mine_moreinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:contentDescription="@string/app_name"
            android:onClick="onClick"
            android:padding="10dp"
            android:src="@drawable/more_info" />
    </RelativeLayout>