<?xml version="1.0" encoding="utf-8"?>
<!-- 首页我的未登陆情况下的头部 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#00a1e1" 
    android:orientation="vertical"
    android:id="@+id/rl_mine_notlogin_toplayout" >

        <ImageView
            android:id="@+id/iv_mine_notlogin_image"
            android:layout_width="79dp"
            android:layout_height="79dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/weidenglutouxiang"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_mine_notlogin_image"
            android:layout_toRightOf="@id/iv_mine_notlogin_image"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_tologin_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_bg"
                android:text="@string/mine_login_or_register_str"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:singleLine="true"
                android:textColor="@color/main_bg"
                android:text="@string/mine_login_or_register_hint"
                android:textSize="14sp" />

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:contentDescription="@string/app_name"
            android:onClick="onClick"
            android:padding="10dp"
            android:src="@drawable/more_info" />

</RelativeLayout>
