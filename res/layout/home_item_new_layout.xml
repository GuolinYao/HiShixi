<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!-- 标题 -->

    <RelativeLayout
        android:id="@+id/home_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_frame_bg"
        android:gravity="center_vertical" >

        <View
            android:id="@+id/view_bg"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/main_content_bg_color" />

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_below="@id/view_bg"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/remenqiye"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="热门企业"
            android:textColor="@color/main_font_color"
            android:textSize="13sp" />
    </RelativeLayout>
    
    
    <!-- 热门企业item -->

    <RelativeLayout
        android:id="@+id/layout_hot_commpany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_item_title"
        android:padding="1px" >

        <ImageView
            android:id="@+id/image_hotcommpany"
            style="@style/list_marginLeft_style"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/image_bg"
            android:contentDescription="@string/app_name"
            android:padding="1px"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@id/image_hotcommpany"
            android:layout_toRightOf="@id/image_hotcommpany"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_commpany_name"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/title_bar_font_other_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_commpany_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="25dp"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignBottom="@id/image_hotcommpany"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/image_hotcommpany"
            android:layout_toRightOf="@id/image_hotcommpany"
            android:background="@color/divider_color" />

        <View
            android:id="@+id/view_commpany_bottom_bg"
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:layout_below="@id/view_line"
            android:visibility="gone" />
    </RelativeLayout>
    
    
    <!-- 热门话题 -->

    <ImageView
        android:id="@+id/image_home"
        style="@style/list_marginLeftAndRight_style"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/home_item_title"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/image_bg"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <View
        android:id="@+id/view_topic_bottom_bg"
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:layout_below="@id/image_home"
        android:visibility="gone" />

    <!-- 人才库 -->

    <ImageView
        android:id="@+id/iv_talent_bank"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_below="@id/home_item_title"
        android:layout_gravity="center"
        android:layout_marginBottom="7.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/image_bg"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:visibility="gone" />
    
     <View
        android:id="@+id/view_talent_bottom_bg"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/iv_talent_bank"
        android:visibility="gone" />

</RelativeLayout>