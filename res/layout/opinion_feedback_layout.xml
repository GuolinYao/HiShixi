    <EditText
        android:id="@+id/et_opinion_content"
        android:gravity="top|start"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_height="200dp"
        android:background="@drawable/tom_bottom_frame_bg"
        android:hint="@string/opinion_content_hint"
        android:inputType="textMultiLine"
        android:singleLine="true"
        android:textColor="@color/main_font_color"
        android:textSize="15sp" />
   <Button android:id="@+id/btn_commit_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_margin="@dimen/activity_horizontal_margin"
        style="@style/nomal_margin_left_right"
        android:background="@drawable/btn_bg"
        android:enabled="false"
        android:textColor="@color/main_bg"
        android:textSize="17sp"
        android:text="@string/commit_feedback_str"
        android:onClick="onClick"
        />
</LinearLayout>