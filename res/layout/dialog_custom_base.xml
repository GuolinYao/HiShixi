<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/dialog_frame_bg"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical" >
    
    <Button 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:id="@+id/btn_select_one"
        android:background="@drawable/action_sheet_up_bg"
        android:layout_gravity="center_horizontal"
        android:textSize="19sp"
        android:textColor="@color/title_bar_font_color"
        android:text="tab1"/>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d8d8d8"/>
    <Button 
        android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:id="@+id/btn_select_two"
        android:padding="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/action_sheet_down_bg"
        android:textSize="19sp"
        android:textColor="#00acf0"
        android:text="tab2"/>
     <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d8d8d8"/>
    <Button 
        android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:id="@+id/btn_select_three"
        android:padding="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/action_sheet_bg"
        android:text="@string/cancel_str"
         android:textSize="19sp"
        android:textColor="#00acf0"
        />

</LinearLayout>
