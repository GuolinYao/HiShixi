<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@drawable/tom_bottom_frame_bg"
    android:gravity="center_vertical" >

    <!--
    android:button="@drawable/checkbox_selector" 
    style="@style/CustomCheckboxTheme"
    -->

    <CheckBox
        android:id="@+id/checkbox_anonymity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:button="@drawable/checkbox_selector"
        android:paddingLeft="18dp"
        android:text="匿名发布"
        android:textColor="#a5a5a5"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_number"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/checkbox_anonymity"
        android:layout_toRightOf="@id/checkbox_anonymity"
        android:gravity="center_vertical"
        android:textColor="#a5a5a5"
        android:textSize="13sp" />

    <!--
         <CheckBox
        android:id="@+id/toolbox_btn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/fatiepics"
        android:button="@null" />
    -->

    <RelativeLayout
        android:id="@+id/layout_photo"
        android:layout_width="44dp"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp" >

        <ImageView
            android:id="@+id/iamge_icon_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/fatiepics" />
    </RelativeLayout>

    <!--
      <CheckBox
        android:id="@+id/toolbox_btn_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/toolbox_btn_more"
        android:layout_toStartOf="@id/toolbox_btn_more" 
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/keyboard"
        android:button="@null" />
    -->

    <RelativeLayout
        android:id="@+id/layout_face"
        android:layout_width="44dp"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/layout_photo"
        android:layout_toStartOf="@id/layout_photo"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iamge_icon_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/keyboard" />
    </RelativeLayout>

</RelativeLayout>