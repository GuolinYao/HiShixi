<?xml version="1.0" encoding="utf-8"?>
<!-- 没有网络的布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_content_bg_color"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_server_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:drawablePadding="28dp"
        android:drawableTop="@drawable/noresult"
        android:text="网络不给力\n请稍后再试"
        android:textColor="#656565"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_again"
        android:layout_width="111dp"
        android:layout_height="41dp"
        android:layout_marginTop="59dp"
        android:background="@drawable/nomal_btn_bg"
        android:text="重试"
        android:textColor="@color/main_bg"
        android:textSize="18sp" />

</LinearLayout>