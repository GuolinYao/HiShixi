<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#f2f1f6" 
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tom_bottom_frame_bg"
        android:orientation="vertical"
        android:layout_marginTop="20dp" 
        android:padding="1dp" >

        <RelativeLayout
            android:id="@+id/rl_intership_starttime_layout"
            style="@style/nomal_margin_left"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:background="@drawable/edit_frame_bg"
            android:gravity="center_vertical"
            android:onClick="onClick" >

            <TextView
                android:id="@+id/tv_intership_starttime_key"
                style="@style/basic_info_titile_style"
                android:text="@string/intership_starttime2_str" />

            <TextView
                android:id="@+id/tv_intership_starttime_value"
                style="@style/basic_info_value_style"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/tv_intership_starttime_key"
                android:layout_toRightOf="@id/tv_intership_starttime_key"
                android:ellipsize="end"
                android:gravity="end"
                android:hint="@string/please_select_time_hint"
                android:singleLine="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_intership_endttime_layout"
            style="@style/nomal_margin_left"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:layout_below="@id/rl_intership_starttime_layout"
            android:gravity="center_vertical"
            android:onClick="onClick" >

            <TextView
                android:id="@+id/tv_intership_endttime_key"
                style="@style/basic_info_titile_style"
                android:text="@string/intership_endtime2_str" />

            <TextView
                android:id="@+id/tv_intership_endttime_value"
                style="@style/basic_info_value_style"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/tv_intership_endttime_key"
                android:layout_toRightOf="@id/tv_intership_endttime_key"
                android:ellipsize="end"
                android:gravity="end"
                android:hint="@string/please_select_time_hint"
                android:singleLine="true" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>