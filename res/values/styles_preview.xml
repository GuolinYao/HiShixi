<?xml version="1.0" encoding="utf-8"?>
<resources>
       <style name="preview_title_font">
           <!-- <item name="android:layout_height">36dp</item> -->
        <item name="android:layout_width">wrap_content</item>
          <item name="android:layout_height">wrap_content</item>
          <item name="android:minHeight">36dp</item>
            <item name="android:textSize">16sp</item>
          <item name="android:textColor">#a5a5a5</item>
            <item name="android:gravity">center_vertical</item>
          <item name="android:layout_marginLeft">20dp</item>
    </style>
    <!-- <item name="android:layout_height">wrap_content</item> -->
    <style name="preview_value_font">
         <item name="android:layout_width">wrap_content</item>
          <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">16sp</item>
          <item name="android:textColor">#656565</item>
          <item name="android:lineSpacingExtra">7dp</item>
    </style>
    
    <!-- 短线 -->
    <style name="preview_short_line">
        <item name="android:layout_width">fill_parent</item>
          <item name="android:layout_height">2px</item>
          <item name="android:background">#00acf0</item>
    </style>
     <!-- 长线 -->
    <style name="preview_long_line">
        <item name="android:layout_width">fill_parent</item>
          <item name="android:layout_height">2px</item>
            <item name="android:layout_gravity">bottom</item>
          <item name="android:background">#e0e0e0</item>
    </style>
</resources>
